<resources>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#E8E8E8</item>
        <item name="android:paddingLeft">0dp</item>

    </style>
    <style name="NumberFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#E8E8E8</item>

    </style>

    <style name="texto_velocimetro" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/Gris_eolian</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/Azul_eolian</item>

    </style>

    <style name="numero_velocimetro" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/Gris_eolian</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/Azul_eolian</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/Azul_eolian</item>
        <item name="colorPrimaryDark">@color/Gris_eolian</item>
        <item name="colorAccent">@color/Blanco</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
